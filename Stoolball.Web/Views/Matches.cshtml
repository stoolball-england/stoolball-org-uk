@inherits Umbraco.Web.Mvc.UmbracoViewPage<MatchListingViewModel>
@using Stoolball.Web.Matches
@section canonical {@Html.Partial("_CanonicalUrl", new[] { "page", "q" })}
<div class="container-xl">
    <h1>@Stoolball.Constants.Pages.Matches</h1>

    <ul class="nav nav-tabs nav-tabs-has-add">
        <li class="nav-item">
            <em class="nav-link active">Matches</em>
        </li>
        <li class="nav-item">
            <a href="/tournaments" class="nav-link">Tournaments</a>
        </li>
    </ul>

    @if (Model.Matches.Count > 0)
    {
        @Html.Partial("_MatchList", Model)
    }
    else
    {
        <p>There are no matches yet this season.</p>
    }

    @Html.Partial("_Paging", Model.MatchFilter.Paging)
    @Html.Partial("_MatchListSubscriptions", new MatchListSubscriptionsViewModel())
</div>