@inherits Umbraco.Web.Mvc.UmbracoViewPage<StatisticsViewModel<Club>>
@using ClientDependency.Core.Mvc
@using Stoolball.Web.Statistics
@using Stoolball.Clubs
@{
    Html.RequiresCss("/statistics/statistics.min.css");

    var individualScores = new IndividualScoresViewModel(Model, Services.UserService) { ShowCaption = true, ShowPlayerColumn = true, StatisticsFilter = Model.StatisticsFilter };
    individualScores.Results.AddRange(Model.PlayerInnings);
}
<div class="container-xl">
    <h1>@Model.Context.ClubName</h1>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="@Model.Context.ClubRoute">Summary</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Model.Context.ClubRoute/matches">Matches</a>
        </li>
        <li class="nav-item">
            <em class="nav-link active">Statistics</em>
        </li>
    </ul>


    @if (!Model.PlayerInnings.Any())
    {
        <p>There are no statistics for this club yet. Statistics are based on scorecards added to this website – see <a href="/organise/website/how-to-add-match-results/">How to add match results</a>.</p>
    }
    else
    {
        @Html.Partial("_IndividualScores", individualScores)
    }
</div>