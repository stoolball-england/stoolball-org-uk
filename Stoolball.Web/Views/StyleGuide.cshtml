@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.StyleGuide>
@using ContentModels = Umbraco.Web.PublishedModels;
@using ClientDependency.Core.Mvc;
<div class="container-xl">
    <h1 data-show-consent="true">@Model.Name</h1>
    <h2>Heading above tabs</h2>
    <ul class="nav nav-tabs nav-tabs-has-add nav-tabs-has-edit">
        <li class="nav-item">
            <em class="nav-link active">Umbraco content</em>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Request.Url.AbsolutePath?alttemplate=styleguideforms">Forms</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Request.Url.AbsolutePath?alttemplate=styleguidestoolballdata">Stoolball data</a>
        </li>
        <li class="nav-item nav-item-admin">
            <div class="dropdown">
                <button class="btn nav-link nav-link-add" type="button" id="add-menu__button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Add a thing
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="add-menu__button">
                    <li class="dropdown-item"><a href="https://example.org">Add a thing</a></li>
                    <li class="dropdown-item"><a href="https://example.org">Add another thing</a></li>
                </ul>
            </div>
        </li>
        <li class="nav-item nav-item-admin d-none d-md-flex">
            <a class="nav-link nav-link-add" href="https://example.org">Add another thing</a>
        </li>
        <li class="nav-item nav-item-admin">
            <a class="nav-link nav-link-edit" href="https://example.org">Edit a thing</a>
        </li>
    </ul>
    <p>Text below tabs.</p>
    <h2>Typography</h2>
    <p>This is a paragraph following an h2, with <strong>bold</strong> and <em>italic</em> formatting.</p>
    <p>Two consecutive paragraphs.</p>
    <p><img src="/images/logos/clubmark.png" alt="Clubmark accredited" width="150" height="29" /></p>
    <p>This is a <a href="https://example.org">link</a> in a paragraph, below an image in its own paragraph.</p>
    <ul>
        <li>An unordered list</li>
        <li>An unordered list</li>
        <li>An unordered list</li>
    </ul>
    <p>A paragraph before and after lists, and another list:</p>
    <ol>
        <li>An ordered list between paragraphs</li>
        <li>
            An ordered list between paragraphs
            <ol>
                <li>
                    With a nested list
                    <ol>
                        <li>
                            And another
                            <ol>
                                <li>
                                    And another
                                    <ol>
                                        <li>And another</li>
                                    </ol>
                                </li>
                            </ol>
                        </li>
                    </ol>
                </li>
            </ol>
        </li>
    </ol>
    <p>A paragraph after the ordered list.</p>
    <h3>A third heading level</h3>
    <p>Followed by a paragraph and a table.</p>
    <table>
        <thead>
            <tr>
                <th>Table heading</th>
                <th>Table heading</th>
                <th>Table heading</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Table heading</th>
                <td>Table data</td>
                <td>Table data</td>
            </tr>
            <tr class="text-muted">
                <td>Table data (muted style)</td>
                <td>Table data (muted style)</td>
                <td>Table data (muted style)</td>
            </tr>
        </tbody>
    </table>
    <p>A paragraph following a table.</p>
    <dl>
        <dt><a href="https://example.org">Definition list title</a></dt>
        <dd>Definition list detail.</dd>
        <dt><a href="https://example.org">Definition list title</a> @Html.Partial("_AdminOnly")</dt>
        <dd>Definition list detail.</dd>
    </dl>
    @Html.GetBlockListHtml(Model, "blockList")
</div>