@inherits Umbraco.Web.Mvc.UmbracoViewPage<Stoolball.Web.Metadata.IHasViewMetadata>
@using ClientDependency.Core.Mvc
@using System.Text.RegularExpressions
@using Stoolball.Web.Account
@{
    Layout = null;
    Html.RequiresCss("~/css/base.css", 1);
    Html.RequiresJs("~/js/libs/purify.min.js", 1);
    Html.RequiresJs("~/js/trusted-types-policy.js", 2);
    Html.RequiresJs("~/js/register-service-worker.js", 2);
    Html.RequiresJs("~/scripts/jquery-3.5.1.min.js", 3); // full jQuery rather than slim is required for jQuery autocomplete
    Html.RequiresJs("~/scripts/bootstrap.bundle.min.js", 4);
    Html.RequiresJs("~/js/opt-in.js");
    if (!string.IsNullOrEmpty(Model.Stylesheet))
    {
        Html.RequiresCss($"~/css/{Model.Stylesheet}.min.css");
    }
}
<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Metadata.PageTitle – Stoolball England</title>
    @if (!string.IsNullOrWhiteSpace(Model.Metadata.Description))
    {
        <meta name="description" content="@Model.Metadata.Description" />
    }
    <link rel="manifest" href="~/Status/offline.json" />
    <link rel="icon" type="image/svg+xml" href="~/images/logos/stoolball-england-icon.svg" />
    <link rel="alternate icon" href="~/favicon.ico" />
    @RenderSection("head", false)
    @Html.RenderCssHere()
</head>
<body>
    <header>
        <div class="container-xl">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="navbar-brand">
                    <a href="/" class="navbar-brand__wrapper"><img src="~/images/logos/stoolball-england.svg" alt="Stoolball England" /></a>
                </div>

                <div class="navbar__menu">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="navbar__account-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar__account-menu">
                            @{
                                var childrenOfHome = Umbraco.Content(Guid.Parse("7ea74fe5-4982-4bcf-bb8a-8e213c32f91c"))
                                .Children()
                                .Where(x => x.IsVisible());
                                foreach (var child in childrenOfHome)
                                {
                                    if (Regex.IsMatch(Request.RawUrl, $"^{child.Url().Replace("/", @"\/")}?$"))
                                    {
                                        <li class="dropdown-item">
                                            <em>@child.Name</em>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="dropdown-item">
                                            <a href="@child.Url()">@child.Name</a>
                                        </li>
                                    }
                                }
                            }
                            </ul>
                    </div>
                </div>

                <div class="navbar__account">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle navbar__account-button" type="button" id="navbar__account-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @if (User.Identity.IsAuthenticated)
                            {
                                var gravatar = new Gravatar(User.Identity.Name);
                                <img src="@gravatar.Url" alt="Account" width="30" height="30" class="navbar__account__account-image" />
                            }
                            else
                            {
                                <svg aria-hidden="true" focusable="true" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512" aria-labelledby="account-title" width="30" height="30">
                                    <title id="account-title">Account</title>
                                    <path fill="currentColor" d="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm0 96c48.6 0 88 39.4 88 88s-39.4 88-88 88-88-39.4-88-88 39.4-88 88-88zm0 344c-58.7 0-111.3-26.6-146.5-68.2 18.8-35.4 55.6-59.8 98.5-59.8 2.4 0 4.8.4 7.1 1.1 13 4.2 26.6 6.9 40.9 6.9 14.3 0 28-2.7 40.9-6.9 2.3-.7 4.7-1.1 7.1-1.1 42.9 0 79.7 24.4 98.5 59.8C359.3 421.4 306.7 448 248 448z"></path>
                                </svg>
                            }
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar__account-menu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="dropdown-item"><a href="/account">My account</a></li>
                                <li class="dropdown-item"><a href="/account/sign-out" class="dropdown-item">Sign out</a></li>
                            }
                            else
                            {
                                <li class="dropdown-item"><a href="/account/create">Create an account</a></li>
                                <li class="dropdown-item"><a href="/account/sign-in?ReturnUrl=@HttpUtility.UrlEncode(Request.Url.PathAndQuery)">Sign in</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    @if (Model.HeaderPhotoWithInheritance() != null)
    {
        <img srcset="@Model.HeaderPhotoWithInheritance().GetCropUrl("extra-small") 576w,
                     @Model.HeaderPhotoWithInheritance().GetCropUrl("small") 768w,
                     @Model.HeaderPhotoWithInheritance().GetCropUrl("medium") 992w,
                     @Model.HeaderPhotoWithInheritance().GetCropUrl("large") 1200w,
                     @Model.HeaderPhotoWithInheritance().GetCropUrl("extra-large") 2000w"
             sizes="100vw" src="@Model.HeaderPhotoWithInheritance().GetCropUrl("large")" alt="" class="header-photo" />
    }
    </header>
    <main>
        <div class="container-xl">

            @{
                var pages = new List<IPublishedContent>();
                var page = Umbraco.AssignedContentItem.Parent;
                while (page != null)
                {
                    pages.Insert(0, page);
                    page = page.Parent;
                }
            }
            @if (pages.Count > 0)
            {
            <nav aria-label="Breadcrumb">
                <ol class="breadcrumb">
                    @for (var i = 0; i < pages.Count; i++)
                    {
                        if (i < pages.Count - 1)
                        {
                            <li class="breadcrumb-item"><a href="@pages[i].Url()">@pages[i].Name</a></li>
                        }
                        else
                        {
                            <li class="breadcrumb-item" aria-current="location"><a href="@pages[i].Url()">@pages[i].Name</a></li>
                        }
                    }
                </ol>
            </nav>
            }

            @RenderBody()
        </div>
    </main>
    <footer>
        <div class="container-xl">
            <p><a href="/contact">Contact us</a></p>
