@model Umbraco.Forms.Web.Models.FieldViewModel
@using Umbraco.Forms.Web

@{ var i = 0; }
          
<span class="checkboxlist" id="@Model.Id">
@foreach (Umbraco.Forms.Web.Models.PrevalueViewModel pv in Model.PreValues)  
{
    <div class="custom-control custom-checkbox">
        <input type="checkbox"
               class="@Html.GetFormFieldClass(Model.FieldTypeName) custom-control-input"
               name="@Model.Name" id="@string.Concat(Model.Id,"_",i)" value="@pv.Value"
               @if (Model.Mandatory) { <text> data-val="true" data-rule-required="true" data-msg-required="@Model.RequiredErrorMessage" </text> }
               @if (Model.ContainsValue(pv.Value)) { <text> checked="checked" </text> } />

        <label for="@string.Concat(Model.Id,"_",i)" class="custom-control-label">@pv.Value</label>
    </div>

    i++;
}
</span>