@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks
@using Stoolball.SocialMedia;
@inject IYouTubeUrlNormaliser normaliser
@{
    var content = (YouTubeVideo)Model.Content;
}
@if (content != null && normaliser.TryNormaliseUrl(content.VideoUrl, out var normalisedUrl))
{
    <iframe src="@normalisedUrl" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen" class="block__youtube"></iframe>
}