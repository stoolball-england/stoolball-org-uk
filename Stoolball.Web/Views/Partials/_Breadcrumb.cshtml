@model List<Breadcrumb>
@using Stoolball.Navigation;
@if (Model != null && Model.Count > 1)
{
    <nav aria-label="Breadcrumb" class="container-xl print__no-urls">
        <ol class="breadcrumb">
            @for (var i = 0; i < Model.Count; i++)
            {
                if (i < Model.Count - 1)
                {
                    <li class="breadcrumb-item"><a href="@Model[i].Url">@Model[i].Name</a></li>
                }
                else
                {
                    <li class="breadcrumb-item" aria-current="location"><a href="@Model[i].Url">@Model[i].Name</a></li>
                }
            }
        </ol>
    </nav>
}
