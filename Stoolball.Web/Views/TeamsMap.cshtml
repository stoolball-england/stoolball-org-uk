@inherits UmbracoViewPage<Stoolball.Web.Teams.Models.TeamsViewModel>
@{ 
    SmidgeHelper.RequiresJs(new JavaScriptFile("https://maps.google.co.uk/maps/api/js?key=" + Model.GoogleMapsApiKey) { Order = 50 });
    SmidgeHelper.RequiresJs(new JavaScriptFile("/js/maps.js") { Order = 90 });
    SmidgeHelper.RequiresJs(new JavaScriptFile("/js/lib/markerclustererplus.1.0.3.min.js") { Order = 95 });
    SmidgeHelper.RequiresJs(new JavaScriptFile("/js/teams-map.js") { Order = 100 });
}
<div class="container-xl">
    <h1>@Stoolball.Constants.Pages.Teams</h1>

    <ul class="nav nav-tabs nav-tabs-has-add">
        <li class="nav-item">
            <a class="nav-link" href="@Stoolball.Constants.Pages.TeamsUrl">Search</a>
        </li>
        <li class="nav-item">
            <em class="nav-link active">Map</em>
        </li>
        <li class="nav-item nav-item-admin nav-item-admin-sm-last d-md-none">
            <div class="dropdown">
                <button class="btn nav-link nav-link-add" type="button" id="add-menu__button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Add club or team
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="add-menu__button">
                    <li class="dropdown-item"><a href="/clubs/add">Add club</a></li>
                    <li class="dropdown-item"><a href="/teams/add">Add team</a></li>
                </ul>
            </div>
        </li>
        <li class="nav-item nav-item-admin d-none d-md-flex nav-item-admin-md-first">
            <a class="nav-link nav-link-add" href="/clubs/add">Add club</a>
        </li>
        <li class="nav-item nav-item-admin d-none d-md-flex">
            <a class="nav-link nav-link-add" href="/teams/add">Add team</a>
        </li>
    </ul>

    <p class="alert alert-info alert-tip">Zoom out to see teams around the world. Why not <a href="/organise/start-a-new-stoolball-team/">start a new stoolball team</a>?</p>

    <div id="map" data-adjust="true" data-hasactiveteams="true" data-teamtype="regular,occasional,limitedmembership">
        <p class="alert-danger alert">
            <strong>
                You can view clubs and teams using Google Maps,
                but we can only show you the map if you <a href="/privacy/cookies/">consent to maps</a>.
            </strong>
        </p>
    </div>
</div>