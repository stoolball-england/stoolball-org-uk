@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using Umbraco.Forms.Mvc
@using Umbraco.Core.Composing;
@using Stoolball.Web.Forms;
@{ 
    var labeller = Current.Factory.GetInstance<IUmbracoFormsLabeller>();
}
<select class="form-control @Html.GetFormFieldClass(Model.FieldTypeName)" name="@Model.Name" id="@Model.Id" aria-describedby="@labeller.DescribedBy(Model)"
        @if (Model.Mandatory) { <text> data-val="true" data-val-required="@Model.RequiredErrorMessage" </text> }>
    <option value=""></option>
    @foreach (var pv in Model.PreValues)
    {
        <option value="@pv.Value"
                @if (Model.ContainsValue(pv.Value)) { <text> selected="selected" </text> }>
            @pv.Value
            </option>
        }
</select>
